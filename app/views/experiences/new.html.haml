- provide :header do
  New Experience
= simple_nested_form_for @experience, wrapper: :vertical_form do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  = render 'form_fields', builder: f


  %nav.navbar.fixed-bottom.navbar-light.bg-faded
    .container.d-flex.justify-content-end
      = f.button :submit, class: "ml-auto"
